@model Aprovacao_Pedidos.Models.LoginUsuario

@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-container mt-5">
                    <div class="card-body">
                        <form asp-action="Index" method="POST" class="form-signin" asp-controller="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="text-center">
                                <img id="profile-img" class="profile-img-card mb-3" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
                                <h3 class="profile-name-card">Login AD</h3>
                            </div>
                            <div class="form-group">
                                <input asp-for="Usuario" class="form-control" placeholder="Usuário" required />
                                <span asp-validation-for="Usuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Senha" type="password" class="form-control" placeholder="Senha" required />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                            @if (TempData["Erro"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    @TempData["Erro"]
                                </div>
                            }
                            <div class="form-group">
                                <button type="submit" class="btn btn-lg btn-primary btn-block btn-signin">Acessar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
